<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<fx:root maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="300.0" minWidth="-Infinity" prefWidth="800.0" type="VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-background-color: #5c5c5c;" text="Instance Manager" textFill="WHITE">
            <font>
                <Font size="24.0" />
            </font>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </Label>
        <HBox alignment="BASELINE_LEFT">
            <children>
                <Label minWidth="85.0" text="Name:" />
                <TextField fx:id="tfName" minWidth="250.0">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </TextField>
                <Label minWidth="85.0" text="Host:">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Label>
                <TextField fx:id="tfHost" minWidth="250.0">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </TextField>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" top="30.0" />
            </padding>
        </HBox>
        <HBox alignment="BASELINE_LEFT">
            <children>
                <Label minWidth="85.0" text="User:" />
                <TextField fx:id="tfUser" minWidth="250.0">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </TextField>
                <Label minWidth="85.0" text="Password:">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Label>
            <PasswordField fx:id="tfPassword" minWidth="250.0">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </PasswordField>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
        <HBox alignment="BASELINE_LEFT" VBox.vgrow="ALWAYS">
            <children>
                <Label minWidth="85.0" text="Port:" />
                <TextField fx:id="tfPort" minWidth="250.0">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </TextField>
                <Label minWidth="85.0" text="Base Dir:">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Label>
                <TextField fx:id="tfBaseDir" minWidth="250.0">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </TextField>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #EEEEEE;">
            <children>
                <Button fx:id="btnSubmitInstance" minWidth="75.0" mnemonicParsing="false" onAction="#handleSubmitInstance" text="Save" />
                <Button fx:id="btnCancel" minWidth="75.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel">
                    <HBox.margin>
                        <Insets left="20.0" right="10.0" />
                    </HBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</fx:root>
